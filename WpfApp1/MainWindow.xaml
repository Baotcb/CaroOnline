<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
          xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="640" Width="760" Closing="Window_Closing"  >
    <Grid >
        <Grid x:Name="baseGrid" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="290"/>
            </Grid.ColumnDefinitions>
            <ItemsControl ItemsSource="{Binding Maps, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Grid.Column="0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Click="Button_Click" Content="{Binding Content}" Width="30" Height="30" Background="{x:Null}" Style="{x:Null}"></Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <StackPanel Grid.Column="1">
                <Grid Background="{DynamicResource MaterialDesignPaper}">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <materialDesign:Card Grid.Row="0" Margin="10">
                        <TextBlock Text="{Binding IdUser, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="20" x:Name="Id" Margin="10"/>
                    </materialDesign:Card>
                    <materialDesign:Card Grid.Row="1" Margin="10">
                            <TextBlock Text="{Binding Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" x:Name="Luot" FontSize="20" Margin="10"/>
                    </materialDesign:Card>
                     <materialDesign:Card Grid.Row="2" Margin="10">
                            <TextBlock Text="{Binding Desk, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="20" Margin="10"/>
                     </materialDesign:Card>

                </Grid>
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <ListBox Grid.Row="0" x:Name="ChatListBox" ItemsSource="{Binding ChatMessages}"  Foreground="Black" Height="200" Margin="0 10 0 10" Background="AntiqueWhite">

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Content}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Background" Value="White" />
                                <Setter Property="FontSize" Value="20"/>
                                <Setter Property="Foreground" Value="Gray"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Status}" Value="Red Left">
                                        <Setter Property="Foreground" Value="Red" />
                                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="Red Right">
                                        <Setter Property="Foreground" Value="Red" />
                                        <Setter Property="HorizontalContentAlignment" Value="Right" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="Blue Left">
                                        <Setter Property="Foreground" Value="Blue" />
                                        <Setter Property="HorizontalContentAlignment" Value="Left" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Status}" Value="Blue Right">
                                        <Setter Property="Foreground" Value="Blue" />
                                        <Setter Property="HorizontalContentAlignment" Value="Right" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>

                    </ListBox>

                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <TextBox x:Name="ChatInputTextBox" Width="200"
                                 Margin="0,0,10,0"
                                 materialDesign:HintAssist.Hint="Type a message..."
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                        <Button Content="Send" Click="Button_Click_2" Style="{StaticResource MaterialDesignFloatingActionButton}"
                                Background="{DynamicResource MaterialDesignAccent}"
                                Foreground="White"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>


        <Grid x:Name="overlayGrid" Background="White">
            <ItemsControl ItemsSource="{Binding Rooms, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Grid.Column="0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding}" Click="Button_Click_1" Width="200" Height="150"></Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Grid>
</Window>
